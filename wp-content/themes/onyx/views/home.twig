{% extends "base.twig" %}

{% block content %}

<main class="home-page">

<div class="global_border"></div>

<section class="hero">
  <div class="hero_content">
    <h1 class="heading_large">
			{% for headline in data.intro_headline %}
	      <div class="fade-in">
	        <div  data-aos="fade-down" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750" data-aos-delay="{{loop.index * 100}}">{{headline.text}}</div>
	      </div>
			{% endfor %}
    </h1>
    {% if data.hero_cta_title %}
	    <div class="hero_cta" data-aos="fade-left" data-aos-offset="200" data-aos-easing="ease-in-out-quart" data-aos-duration="750" data-aos-once="true" data-aos-anchor="top-center">
	      <div class="line hidden rtl"><span></span></div>
	      <h3 class="heading_standard">{{data.hero_cta_title}}</h3>
	      <a href="{{data.hero_cta_url}}" class="button hollow gold">{{data.hero_cta_label}}</a>
	    </div>
	  {% endif %}
  </div>
  <div data-aos="zoom-out" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750" data-aos-delay="0" class="hero_bg" style="background-image: url({{data.hero_image}})"></div>
</section>

<section class="slider_section">
  <div class="container">
    <section class="slider">
      <h2 class="heading_mid" data-aos="fade-right" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750">
        {{data.testimonials_title}}
      </h2>
      <div class="line hidden vertical ttb"><span></span></div>
      <div class="slider_container"  data-aos="fade-right" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750">
        <div class="slider_quotes slider_quotes slider_wrapper">
					{% for testimony in data.testimonials %}
	          <article class="slide">
	            <p>{{testimony.text}}</p>
	            <h4 class="heading_small">{{testimony.name_title}}</h4>
	            {% if testimony.image %}
	            	<img src="{{testimony.image}}">
	            {% endif %}
	          </article>
					{% endfor %}
        </div>
        <div class="slider_wrapper_arrows arrows ">
          <a href="#" class="prev">&larr;</a>
          <a href="#" class="next">&rarr;</a>
        </div>
      </div>
    </section>
    <!-- Used twitters own embeded tweet option. All you should have to do is grab the latest 4 permalinks, and drop each one into a slide. I believe WP will take care of the embed process. -->
    <section class="slider">
      <h2 class="heading_mid " data-aos="fade-left" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750">
        {{data.twitter_title}}
      </h2>
      <div class="line hidden vertical btt"><span></span></div>
      <div class="slider_container" data-aos="fade-left" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750">
        <div class="slider_social slider_social slider_wrapper ">
          {% for tweet in tweets %}
            <article class="slide">
              {{tweet.html}}
            </article>
          {% endfor %}
        </div>
        <div class="slider_wrapper_arrows arrows ">
          <a href="#" class="prev">&larr;</a>
          <a href="#" class="next">&rarr;</a>
        </div>
      </div>
    </section>
  </div>
</section>
{% endblock %}
