</section>

<section class="twitter-feed">
  <div class="container">
  <header>
    <h2 class="heading heading_big" data-aos="fade-right" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750" data-aos-delay="0">{{data.recent_tweets}}</h2>
    <a href="https://twitter.com/intent/follow?screen_name=JDruryPartners" class="button hollow bold gold" data-aos="fade-left" data-aos-once="true" data-aos-easing="ease-in-out-quart" data-aos-duration="750" data-aos-delay="0">Follow @jdrurypartners</a>
  </header>
  <div class="tweets_container">
    <div class="slider_tweets">
      {% for tweet in tweets %}
        <article class="tweet-slide">
          <time>{{tweet.date}}</time>
          <p>{{tweet.text}}</p>
        </article>
      {% endfor %}
    </div>
    <div class="slider_wrapper_arrows arrows">
      <a href="#" class="prev">&larr;</a>
      <a href="#" class="next">&rarr;</a>
    </div>
  </div>
  </div>
</section>

<div class="global_border"></div>
{% endblock %}
